<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="15dp"
    tools:context=".AdminMaintainProductsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="3dp"
            />

        <EditText
            android:id="@+id/maintain_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintain_product_image"
            android:layout_marginTop="10dp"
            android:hint="Product Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:padding="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-1dp"
            android:background="@drawable/input_design"/>

        <EditText
            android:id="@+id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintain_product_name"
            android:layout_marginTop="10dp"
            android:hint="Product Price"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:padding="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input_design"/>


        <EditText
             android:id="@+id/maintain_product_description"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/maintain_product_price"
             android:layout_marginTop="2dp"
             android:hint="Product Description"
             android:textAlignment="center"
             android:textSize="20sp"
             android:textStyle="bold"
             android:textColor="@color/colorPrimary"
            android:padding="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input_design"/>

        <Button
            android:id="@+id/apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_description"
            android:background="@drawable/buttons"
            android:layout_margin="10dp"
            android:text="Apply Changes"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"/>

    </RelativeLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>